{
    "agent": {
        "default_profile": "write",
        "default_model": {
            "provider": "copilot_chat",
            "model": "gpt-5-mini"
        },
        "preferred_completion_mode": "normal"
    },
    "icon_theme": "Base Charmed Icons",
    "features": {
        "edit_prediction_provider": "copilot"
    },
    "telemetry": {
        "metrics": false,
        "diagnostics": false
    },
    "theme": "Cursor Dark",
    "cursor_blink": true,
    "ui_font_family": "GeistMono Nerd Font Mono",
    "buffer_font_family": "GeistMono Nerd Font Mono",
    "restore_on_startup": "last_workspace",
    "autosave": { "after_delay": { "milliseconds": 500 } },
    "buffer_font_size": 14,
    "soft_wrap": "editor_width",
    "languages": {
        "JavaScript": {
            "code_actions_on_format": {
                "source.organizeImports": true,
                "source.fixAll.eslint": true
            }
        },
        "TypeScript": {
            "code_actions_on_format": {
                "source.organizeImports": true,
                "source.fixAll.eslint": true
            }
        },
        "TSX": {
            "code_actions_on_format": {
                "source.organizeImports": true,
                "source.fixAll.eslint": true
            }
        }
    },
    "lsp": {
        "typescript-language-server": {
            "initialization_options": {
                "preferences": {
                    "includeInlayParameterNameHints": "all",
                    "includeInlayParameterNameHintsWhenArgumentMatchesName": true,
                    "includeInlayFunctionParameterTypeHints": true,
                    "includeInlayVariableTypeHints": true,
                    "includeInlayVariableTypeHintsWhenTypeMatchesName": false,
                    "includeInlayPropertyDeclarationTypeHints": true,
                    "includeInlayFunctionLikeReturnTypeHints": true,
                    "includeInlayEnumMemberValueHints": true
                }
            }
        },
        "vscode-css-language-server": {
            "settings": {
                "css": {
                    "lint": {
                        "unknownAtRules": "ignore"
                    }
                }
            }
        }
    },
    "toolbar": {
        "breadcrumbs": false,
        "quick_actions": false,
        "selections_menu": false
    },
    "terminal": {
        "cursor_shape": "bar",
        "font_size": 14,
        "line_height": "standard",
        "font_family": "GeistMono Nerd Font Mono",
        "alternate_scroll": "on"
    },

    "experimental.theme_overrides": {
        "panel.focused_border": "#00000000",
        "editor.document_highlight.bracket_background": "#ffffff00"
        //vesper theme overrides
        // "border": "#202020",
        // "editor.indent_guide": "#FFFFFF05",
        // "editor.indent_guide_active": "#FFFFFF0A",
        // "border.focused": "#FFC799",
        // "border.selected": "#FFC799",
        // "border.transparent": null,
        // "border.disabled": "#101010"
    },
    "tabs": {
        "file_icons": true,
        "git_status": true,
        "show_diagnostics": "errors"
    },
    "tab_bar": {
        "show_nav_history_buttons": false
    },
    "project_panel": {
        "default_width": 260,
        "entry_spacing": "standard",
        "auto_fold_dirs": false,
        "scrollbar": {
            "show": "never"
        }
    },
    "tab_size": 4,
    "diagnostics": {
        "inline": {
            "enabled": true,
            "update_debounce_ms": 150,
            "padding": 4,
            "min_column": 80,
            "max_severity": "warning"
        }
    },
    "scrollbar": {
        "axes": {
            "horizontal": false
        }
    },
    "preview_tabs": {
        "enabled": false,
        "enable_preview_from_file_finder": true,
        "enable_preview_from_code_navigation": true
    },
    "title_bar": {
        "show_menus": false,
        "show_branch_icon": true
    },
    "collaboration_panel": {
        "button": false
    }
}
